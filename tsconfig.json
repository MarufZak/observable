{
    "compilerOptions": {
        "skipLibCheck": true,
        "target": "ES2015",
        "moduleDetection": "force",
        "isolatedModules": true,
        "verbatimModuleSyntax": true,
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitOverride": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "declaration": true,
        "lib": ["es2022", "DOM"]
    }
}
